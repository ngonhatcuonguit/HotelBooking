<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        app:carbon_cornerRadius="26dp"
        android:background="@color/white"
        android:layout_marginHorizontal="30dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_success"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_success_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Payment Successfull!"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/color_primary"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/iv_success"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_success_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Successfully made payment and hotel booking"
            android:textColor="#515151"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_success_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <carbon.widget.Button
            android:id="@+id/btn_view_ticket"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:carbon_cornerRadius="26dp"
            android:text="View Ticket"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@color/color_primary"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_success_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <carbon.widget.Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="@color/color_primary"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="#E8F8EF"
            app:carbon_cornerRadius="26dp"
            android:layout_marginTop="22dp"
            android:layout_marginHorizontal="@dimen/_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_view_ticket"
            />

    </carbon.widget.ConstraintLayout>
</layout>