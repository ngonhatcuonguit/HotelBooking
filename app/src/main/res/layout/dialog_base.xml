<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/tv_title_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:text="Xác nhận đồng bộ tài khoản"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_message_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center|top"
        android:minHeight="60dp"
        android:text="Lỗi hệ thống"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_base" />

    <carbon.widget.Button
        android:id="@+id/btn_negative_base"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#6c6f7d"
        android:stateListAnimator="@null"
        android:text="Hủy bỏ"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible"
        app:carbon_cornerRadius="@dimen/_8dp"
        app:layout_constraintEnd_toStartOf="@id/btn_confirm_base"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message_base" />

    <carbon.widget.Button
        android:id="@+id/btn_confirm_base"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_primary"
        android:stateListAnimator="@null"
        android:text="Đồng ú"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:carbon_cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_negative_base"
        app:layout_constraintTop_toBottomOf="@id/tv_message_base" />

</androidx.constraintlayout.widget.ConstraintLayout>
